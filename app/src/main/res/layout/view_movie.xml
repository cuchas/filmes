<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="@dimen/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_alignParentStart="true"
            android:id="@+id/image_poster_movie"
            android:foregroundGravity="center_vertical"
            android:layout_marginEnd="@dimen/grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignTop="@id/image_poster_movie"
            android:layout_toEndOf="@id/image_poster_movie"
            android:layout_marginBottom="@dimen/text_grid"
            android:id="@+id/text_title_movie"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignStart="@id/text_title_movie"
            android:layout_below="@id/text_title_movie"
            android:layout_marginTop="@dimen/text_grid"
            android:layout_marginBottom="@dimen/text_grid"
            android:layout_marginEnd="@dimen/text_grid"
            android:id="@+id/text_release_label_movie"
            android:text="@string/release_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@id/text_title_movie"
            android:layout_toEndOf="@id/text_release_label_movie"
            android:layout_alignTop="@id/text_release_label_movie"
            android:id="@+id/text_release_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_overview_movie"
            android:layout_marginTop="@dimen/text_grid"
            android:layout_alignStart="@id/text_title_movie"
            android:layout_below="@id/text_release_label_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>